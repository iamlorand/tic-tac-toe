<Window x:Class="X_0_With_Login.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:X_0_With_Login"
        mc:Ignorable="d"
        Title="LoginScreen" Height="400" Width="400" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
            <Separator MinHeight="2" />
            <Label Content="Username" Foreground="White" />
            <TextBox Name="username" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White" />
            <PasswordBox Name="password" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Content="Submit" Margin="60 30" Name="Submit" Background="#545d6a" Foreground="White" FontSize="18" Click="Submit_Click"/>
        </StackPanel>
    </Border>
</Window>
